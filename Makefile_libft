NAME=libft.a

SRC=	ft_atoi.c ft_bzero.c ft_calloc.c ft_isalnum.c ft_isalpha.c\
		ft_isascii.c ft_isprint.c ft_isdigit.c ft_itoa.c ft_memchr.c ft_memcmp.c ft_memmove.c ft_memcpy.c ft_memset.c ft_putchar_fd.c\
		ft_putendl_fd.c ft_putnbr_fd.c ft_putstr_fd.c ft_split.c ft_strchr.c ft_strrchr.c ft_strdup.c\
		ft_striteri.c ft_strjoin.c ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strmapi.c\
		ft_strncmp.c ft_strnstr.c ft_strtrim.c ft_substr.c ft_tolower.c ft_toupper.c

BNS=	$(SRC) ft_lstadd_front_bonus.c ft_lstsize_bonus.c ft_lstlast_bonus.c ft_lstadd_back_bonus.c\
		ft_lstdelone_bonus.c ft_lstclear_bonus.c ft_lstiter_bonus.c ft_lstmap_bonus.c ft_lstnew_bonus.c

OBJ=$(SRC:.c=.o)
BOBJ=$(BNS:.c=.o)
CC=gcc -c
CFLAGS=-Wall -Wextra -Werror
AR=ar rc
REM=rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(AR) $(NAME) $(OBJ)
	ranlib $(NAME)
	
bonus: $(BOBJ)
	$(AR) $(NAME) $(BOBJ)
	ranlib $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) $<

clean:
	$(REM) $(OBJ) $(BOBJ)
		
fclean: clean
	$(REM) $(NAME)

re:	fclean all

.PHONY: all clean fclean re bonus
		